
<h1>Listing product2s</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Description</th>


  </tr>

<% @product2s.each do |product2| %>
  <tr class="<%= cycle('list_line_odd','list_line_even') %>">


    <td><%=image_tag( product2.image_url , :class=>'list_image') %></td>
    <td class="list_description">
      <dl>

        <dt>
         <%= product2.title %>
        </dt>
        <dd>
          <%= truncate(strip_tags(product2.description),:length=>80)%>
        </dd>
      </dl>


    <td class="list_actions"><%= link_to 'Show', product2 %><br/>
    <%= link_to 'Edit', edit_product2_path(product2) %>            <br/>
    <%= link_to 'Destroy', product2, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product2', new_product2_path %>
